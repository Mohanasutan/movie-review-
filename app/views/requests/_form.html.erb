<div align="center">
  <div class="box-container">
<%= form_with(model: request) do |form| %>
  <% if request.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
        <% request.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :movie_name, style: "display: block" %>
    <%= form.text_field :movie_name %>
  </div>
<br>
  <div>
    <%= form.submit class: "btn btn-success btn sm"%>
  </div>
<% end %>
</div>
</div>

<style>
    /* Define styles for the container */
    .box-container {
        width: 300px; /* Set the width of the box */
        height: 150px; /* Set the height of the box */
        border: 1px solid black; /* Add a border */
        padding: 20px; /* Add some padding inside the box */
        margin: 20px; /* Add margin to create space between containers */
         /* For the movie box to appear side by side */
        background-color: rgb(224,255,255,0.7);
        border-radius: 10px; /* Add rounded corners */
        color: #000000;
        align-content: center;
        font-size: 17px;

    }
</style>