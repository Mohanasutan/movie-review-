<div style="text-align: center;">
  <div>
    <p style="color: green;"><%= notice %></p>
<br>
    <br>
    <div class="color">
    <h4>Requests</h4>
    </div>
    <div class="table-container">
    <table class="table table-secondary">
      <thead>
      <tr>
        <th>Movies Requested</th>
      </tr>
      </thead>
      <tbody>
      <% @requests.each do |request| %>
        <tr>
          <td><%= render request %></td>
          <% if current_user.id==1 %>
          <td><%= button_to "Delete this request", request, method: :delete %></td>
            <%end %>
        </tr>
      <% end %>
      </tbody>
    </table>
    </div>
    <div class="color">
        <h6>If the movie you want is not in the request list, </h6>
    </div>
    <%= link_to "Request movie", new_request_path, class: "btn btn-info btn sm" %>
    <%= link_to "Back", root_path, class: "btn btn-info btn sm"  %>
  </div>
</div>

<style>
    .color
    {
        color: #F7F7F7;
    }
    .table-container {
        width: 80%; /* Set the desired width for the table container */
        margin: 0 auto; /* Center the table container horizontally */
    }
</style>
